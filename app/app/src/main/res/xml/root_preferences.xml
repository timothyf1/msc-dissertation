<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Alert Options">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_all_alerts"
            android:title="All Alerts"
            app:disableDependentsState="true" />

        <MultiSelectListPreference
            android:defaultValue="@array/alert_options_display"
            android:entries="@array/alert_options_display"
            android:entryValues="@array/alert_options_values"
            android:key="alert_options"
            android:title="Select Alert Options"
            app:dependency="switch_all_alerts" />

        <SeekBarPreference
            android:defaultValue="10"
            android:key="min_alert_speed"
            android:max="20"
            android:min="10"
            android:title="Minimum speed for alerts"
            app:allowDividerAbove="true"
            app:showSeekBarValue="true"
            app:singleLineTitle="false"
            app:summary="When travelling below this speed alerts will not be created" />

